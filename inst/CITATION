year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the usfootballR R package in publications, use:")

citEntry(entry = "Misc",
         author = personList(
         as.person("Saiem Gilani")),
         title = "usfootballR: The SportsDataverse's R Package for MLS and NWSL Data.",
         url = c("saiemgilani.github.io/usfootballR/"),
         year = year,
         note = note,
         textVersion = paste(
    "Saiem Gilani. usfootballR: The SportsDataverse's R Package for MLS and NWSL Data.",
    "Retrieved from https://saiemgilani.github.io/usfootballR/"
  )
)
